<h1>New Task</h1>

<%= form_with model: @task, local: true do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br><br>

  <%= f.label :details %><br>
  <%= f.text_area :details %><br><br>

  <%= f.label :completed %>
  <%= f.check_box :completed %><br><br>

  <%= f.submit "Create Task" %>
<% end %>

