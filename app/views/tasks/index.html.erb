<div class="d-flex justify-content-center align-items-center vh-100">
  <h1>My tasks</h1>

  <%= link_to " Add new task", new_task_path %>

  <ul>
    <% @tasks.each do |task| %>
      <li>
        <strong><%= link_to task.title, task_path(task) %></strong><br>
        <%= task.details %><br>
        Completed: <%= task.completed ? "☑️" : "❌" %>

        <%= link_to "Edit", edit_task_path(task), class:"btn btn-primary" %>

        <%= link_to "Delete", task_path(task), class:"btn btn-danger",
            data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this task?" } %>
      </li>
    <% end %>
  </ul>
</div>
